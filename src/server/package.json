{
  "name": "specmgr-server",
  "version": "1.0.0",
  "private": true,
  "description": "Backend Node.js server for SpecMgr",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "dev": "nodemon --exec ts-node index.ts --watch . --ext ts,json",
    "build": "tsc --build",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts --report-unused-disable-directives",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "dotenv": "^16.3.1",
    "chokidar": "^3.5.3",
    "bullmq": "^4.15.4",
    "ioredis": "^5.3.2",
    "@qdrant/js-client-rest": "^1.7.0",
    "openai": "^4.24.1",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "winston": "^3.11.0",
    "express-rate-limit": "^7.1.5",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/fs-extra": "^11.0.4",
    "@types/node-cron": "^3.0.11",
    "ts-node": "^10.9.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "nodemonConfig": {
    "ignore": ["dist/", "node_modules/"],
    "delay": 2000,
    "env": {
      "NODE_ENV": "development"
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "**/*.ts",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**"
    ]
  }
}